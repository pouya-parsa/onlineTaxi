        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="text1">
        <item name="android:textColor">#000</item>

    </style>

    <style name="loginButtons">
        <item name="android:background">#ffc600</item>
